@model IEnumerable<Tekegy_SendSms_Task.Models.Message>
@{
    ViewBag.Title = "Status";
}

<h2>Status</h2>
@if (Model.Count() <= 0)
{
    <h1>You Don't have any Status</h1>
}

else
{
    foreach (var message in Model)
    {

        foreach (var recipients in message.Recipients)
        {

            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <td>Recipient Name</td>
                        <td>Message Status</td>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@recipients.RecipientNumber </td>
                        <td class="success">@recipients.MessageStatus</td>
                    </tr>
                </tbody>
            </table>
        }

    }

}

